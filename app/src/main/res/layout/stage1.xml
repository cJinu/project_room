<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Stage1"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/st1_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/main1"
            android:orientation="vertical">

            <Button
                android:id="@+id/chestBtn"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                android:background="@android:drawable/stat_notify_sdcard"
                android:onClick="onChestBtn"
                android:text="상자"
                android:translationX="200dp"
                android:translationY="360dp" />

            <Button
                android:id="@+id/keyBtn"
                android:layout_width="35dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                android:background="@drawable/img"
                android:onClick="onKeyBtn"
                android:rotationX="0"
                android:text="열쇠"
                android:translationX="600dp"
                android:translationY="320dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.7"
        android:background="@android:color/black"
        android:padding="16dp"
        android:tag="1"
        android:text="아무 스토리 1번"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onInBtn"
        android:text="인벤토리" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.7"
        android:background="@android:color/black"
        android:padding="16dp"
        android:tag="1"
        android:visibility="invisible"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>