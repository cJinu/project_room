<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Stage2"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/stage2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/stage2"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Button
                    android:id="@+id/Statue1Btn"
                    android:layout_width="71dp"
                    android:layout_height="265dp"
                    android:layout_marginStart="88dp"
                    android:layout_marginBottom="132dp"
                    android:alpha="0"
                    android:onClick="Statue1Btn"
                    android:text="Statue1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/Statue2Btn"
                    android:layout_width="71dp"
                    android:layout_height="265dp"
                    android:layout_marginStart="308dp"
                    android:layout_marginBottom="132dp"
                    android:alpha="0"
                    android:onClick="Statue2Btn"
                    android:text="Statue2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/Statue3Btn"
                    android:layout_width="71dp"
                    android:layout_height="265dp"
                    android:layout_marginStart="824dp"
                    android:layout_marginBottom="124dp"
                    android:alpha="0"
                    android:onClick="Statue3Btn"
                    android:text="Statue3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/Statue4Btn"
                    android:layout_width="71dp"
                    android:layout_height="265dp"
                    android:layout_marginStart="1028dp"
                    android:layout_marginBottom="132dp"
                    android:alpha="0"
                    android:onClick="Statue4Btn"
                    android:text="Statue4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/box1"
                    android:layout_width="50dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/box"
                    android:onClick="box1Btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/box2"
                    android:layout_width="50dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="320dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/box"
                    android:onClick="box2Btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/box3"
                    android:layout_width="50dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="836dp"
                    android:layout_marginBottom="52dp"
                    android:background="@drawable/box"
                    android:onClick="box3Btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/box4"
                    android:layout_width="50dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="1036dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/box"
                    android:onClick="box4Btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/DoorBtn"
                    android:layout_width="237dp"
                    android:layout_height="363dp"
                    android:layout_marginStart="484dp"
                    android:layout_marginBottom="340dp"
                    android:alpha="0"
                    android:onClick="doorBtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/LockBtn"
                    android:layout_width="59dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="324dp"
                    android:layout_marginBottom="492dp"
                    android:background="@drawable/lock"
                    android:onClick="lockBtn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.7"
        android:background="@android:color/black"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.7"
        android:background="@android:color/black"
        android:padding="16dp"
        android:visibility="invisible"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onInBtn"
        android:text="인벤토리"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>